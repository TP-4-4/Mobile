RelativeLayout:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, None
        height: self.minimum_height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDTextField:
            id: phone_number_field
            hint_text: 'Phone number'
            helper_text: 'Enter your phone number'
            helper_text_mode: 'on_error'
            helper_text_color_mode: 'custom'
            size_hint_y: None
            height: dp(40)

        MDTextField:
            id: password_field
            hint_text: 'Password'
            helper_text: 'Enter your password'
            helper_text_mode: 'on_focus'
            password: True
            size_hint_y: None
            height: dp(40)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(36)
            pos_hint: {'center_x': 0.5}
            padding: dp(10)

            MDRaisedButton:
                text: 'Submit'
                size_hint_y: None
                height: dp(36)
                md_bg_color: (1, 0.478, 0, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: app.submit_data(phone_number_field.text, password_field.text)

    MDIcon:
        icon: "logo.png"  # Путь к вашему логотипу
        size_hint: None, None
        size: dp(200), dp(100)
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
