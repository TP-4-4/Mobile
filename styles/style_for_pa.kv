<ProfileScreen>:
    FloatLayout:

        MDIcon:
            icon: "img/logo.png"
            size_hint: None, None
            size: dp(app.width/5), dp(app.height/5)
            pos_hint: {'left': 1, 'top': 1}

        Label:
            text: 'Личныe данные'
            font_size: '24sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'top': 0.9}
            color: 1, 0.478, 0, 1


        Label:
            text: f'Фамилия: {root.last_name}'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            color: 0, 0, 0, 1

        Label:
            text: f'Имя: {root.name}'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'top': 0.65}
            color: 0, 0, 0, 1

        Label:
            text: f'Отчество: {root.otchectvo}'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'top': 0.6}
            color: 0, 0, 0, 1

        Label:
            text: f'Дата рождения: {root.databirth}'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'top': 0.55}
            color: 0, 0, 0, 1

        Label:
            text: f'Номер телефона: {root.number}'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'top': 0.5}
            color: 0, 0, 0, 1

        MDRaisedButton:
            text: "Выйти"
            size_hint: None, None
            height: dp(36)
            md_bg_color: (1, 0.478, 0, 1)
            pos_hint: {'center_x': 0.5, 'y': 0.05}
